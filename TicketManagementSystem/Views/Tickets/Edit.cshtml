            @*<div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>*@
            @if (Model.Documents != null)
            {

                @foreach (var item in Model.Documents)
                {
                    <dl class="row">
                        @if (i == 0)
                        {
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Documents)
                            </dt>
                        }
                        else
                        {
                            <dt class="col-sm-3">
                            </dt>
                        }

                    <dd class="col-sm-3">
                        <a asp-controller="Documents" asp-action="Download" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </dd>

                    </dl>
                    i++;
                }


            }
            <div class="form-group" align="center">
                <input name="submit" type="submit" id="submit" value="Save as Draft" class="btn btn-primary" />
                <input name="submit" type="submit" id="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Delete" asp-route-id="@Model.Ticket.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>

