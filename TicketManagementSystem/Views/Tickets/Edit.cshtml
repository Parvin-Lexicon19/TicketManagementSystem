<div>
    @*<div class="row">*@
        <div class="col-md-8">
            <form asp-action="Edit" id="editform" enctype="multipart/form-data" method="post">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <input type="hidden" asp-for="Ticket.Id" />
