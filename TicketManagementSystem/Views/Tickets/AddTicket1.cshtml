@model TicketManagementSystem.Core.ViewModels.AddTicketViewModel
@{
    ViewData["Title"] = "AddTicket1";
}

<h1>AddTicket1</h1>

<form enctype="multipart/form-data" asp-controller="Ticket" asp-action="AddTicket"
      method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Ticket.Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Ticket.Title" class="form-control" placeholder="Title">
            <span asp-validation-for="Ticket.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Ticket.Problem" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Ticket.Problem" class="form-control" placeholder="Problem">
                <span asp-validation-for="Ticket.Title" class="text-danger"></span>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Ticket.Project" class="control-label"></label>
        <select asp-for="Ticket.ProjectId" class="form-control" asp-items="ViewBag.ProjectId">
            @*(IEnumerable<SelectListItem>)loggedInUserProjects*@
            <option value="">Select Project</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Ticket.CustomerPriority" class="control-label">Priority</label>
        <select asp-for="Ticket.CustomerPriority" asp-items="Html.GetEnumSelectList<Priority>()" class="form-control">
            <option value="">Select Priority</option>
        </select>
        <span asp-validation-for="Ticket.CustomerPriority" class="text-danger"></span>
    </div>


    <div class="form-group row">
        <label asp-for="File" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="File" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Upload File</button>
        </div>
    </div>


</form>

