                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
